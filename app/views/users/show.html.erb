
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <div>
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3>name <%= @user.name %></h3>
        <h3>introduction <%= @user.introduction %></h3>

          <%= link_to edit_user_path(@user), class: "btn btn-danger" do %>
            <i class="fas fa-user-cog" aria-hidden="true"></i>
          <% end %>

      </div>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>


          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>

        <br><%= f.submit 'Create Book' %></br>
      <% end %>
    </div>



<div class="col-md-8 offset-md-1">

    <h2>Books</h2>
    
     <table width="80%">
          <tr>
            <th> </th>
            <th>title</th>
            <th>opinion</th>
          </tr>


  <% @books.each do |book| %>
  <tr>
    <td>
     <%= link_to user_path(@user.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
     <% end %>
    </td>
    <td>
  
      <%= link_to book_path(book.id) do %>

        <%= book.title %>
      <% end %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
  <% end %>
 </table>
