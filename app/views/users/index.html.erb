
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">

   <div class="col-md-3">

     <div>
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3>name <%= @user.name %></h3>
        <h3>introduction <%= @user.introduction %></h3>
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: "btn btn-danger" do %>
           <i class="fas fa-user-cog" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>

      <h1>New book</h1>

      <%= form_with model: @book do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br><%= f.submit 'Create Book' %></br>
      <% end %>
    </div>



      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>



        <table width="80%">
          <tr>
            <th></th>
            <th>images</th>
            <th>name</th>
          </tr>

          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td> <%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>














    </div>

    </div>
    </div>