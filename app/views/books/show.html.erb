<div class="container">
  <div class="row">

   <div class="col-md-3">

      <% if @books.errors.any? %>
        <%= @books.errors.count %>件のerrorが発生しました
          <ul>
            <% @books.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <div>
        <%= flash[:notice] %>
      </div>

      <div>
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3>name <%= @user.name %></h3>
        <h3>introduction <%= @user.introduction %></h3>
       
          <%= link_to edit_user_path(@user), class: "btn btn-danger" do %>
        <i class="fas fa-user-cog" aria-hidden="true"></i>
          <% end %>
          

      </div>

      <h1>New book</h1>
      <%= form_with model: @books do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br><%= f.submit 'Create Book' %><br>
      <% end %>
  </div>



    <div class="col-md-8 offset-md-1">

<div>
  <h3>Book detail</h3>

  <%= link_to user_path(@user.id) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
    <%= @book.user.name %></p>
  <% end %>


  <%= link_to book_path(@book.id) do %>
    <p>Title：<%= @book.title %></p>
   <% end %>

  <p>Opinion：<%= @book.body %></p>


  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>

</div>
</div>


</div>
</div>
